<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.niranjan.androidtutorials">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
            android:name=".TutorialApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.AndroidTutorials">
        <activity
                android:name=".MainActivity"
                android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".slot.SlotActivity"/>
        <activity android:name=".price.PriceCalculatorActivity"/>
        <activity android:name=".quiz.QuizActivity" />
        <activity android:name=".runner.RunnerActivity" />
        <activity android:name=".notes.view.NotesActivity" />
        <activity android:name=".notes.view.NewNotesActivity" />
        <activity android:name=".quotes.view.QuotesActivity" />
    </application>

</manifest>