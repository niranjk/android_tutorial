<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!-- Themes are hierarchical We inherit all the attributes values from parent. -->
    <style name="Theme.AndroidTutorials" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary_blue</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant_blue</item>
        <item name="colorOnPrimary">@color/color_on_primary_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary_yellow</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant_yellow</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>
        <!-- Error color -->
        <item name="colorError">@color/color_error</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <!-- For text input fields -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <!-- For radio buttons -->
        <item name="radioButtonStyle">@style/Widget.Price.CompoundButton.RadioButton</item>
        <!-- For switches -->
        <item name="switchStyle">@style/Widget.Price.CompoundButton.Switch</item>
        <item name="windowActionBar">false</item>
        <item name="actionBarSize">40dp</item>
    </style>

    <style name="Theme.Personalised.Level1" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>
</resources>